<!DOCTYPE html>
<html>
<%- include('./partials/header.ejs') %>

    <body>
        <%- include('./partials/nav.ejs') %>
            <h2 class="login_slider_heading">Login with your Credentials</h2>
            <div class="login_slider">

                <div class="form_slider">
                    <form action="/login" method="POST">
                        <div class="form-group">
                            <label for="exampleInputEmail1">User Name</label>
                            <input name="username" style="margin-bottom:10px" type="name" class="form-control"
                                id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter username">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.</small>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input name="password" type="password" class="form-control" id="exampleInputPassword1"
                                placeholder="Password">
                        </div>
                        <a href="/bussinessContact">
                            <button id='form_button' type="submit" class="btn btn-primary">Login</button>
                        </a>

                    </form>
                </div>
            </div>

    </body>

</html>